{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Source-and-Sorcery",
            "type": "shell",
            "command": "Engine\\Build\\BatchFiles\\Build.bat",
            "args": [
                "Source-and-SorceryEditor",
                "Win64",
                "Development",
                "-Project=${workspaceFolder}\\Source-and-Sorcery.uproject",
                "-WaitMutex",
                "-FromMsBuild"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}